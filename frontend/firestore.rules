rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isUser(userId) { return request.auth != null && request.auth.uid == userId; }
    function isVerified() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.aadhaarVerified == true;
    }

    // Users profile documents
    match /users/{userId} {
      allow read: if isSignedIn(); // Allow all signed-in users to read profiles (for showing names)
      allow create: if isUser(userId);
      allow update: if isUser(userId);
    }

    // Food items (donations)
    match /food_items/{foodId} {
      // Readable to signed-in users (you can loosen to public if desired)
      allow read: if true;
      // Create allowed for any signed-in user (temporarily relaxed)
      allow create: if isSignedIn();
      // Update allowed for:
      // 1. Original donor (can update their own items)
      // 2. NGO requesting the item (can set status to 'requested' and requestedBy field)
      // And only if signed-in (temporarily relaxed)
      allow update: if isSignedIn() && (
        resource.data.donorId == request.auth.uid ||
        (!('donorId' in resource.data) && request.resource.data.donorId == request.auth.uid) ||
        (request.resource.data.status == 'requested' && request.resource.data.requestedBy == request.auth.uid)
      );
    }

    // Claims (recipient claims a food item)
    match /claims/{claimId} {
      allow read: if isSignedIn();
      // Creating or updating claims allowed for signed-in users (temporarily relaxed)
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    // AI predictions (write restricted - expect server side generation)
    match /food_predictions/{predictionId} {
      allow read: if isSignedIn();
      allow write: if false; // locked down until server / admin function implemented
    }
  }
}
